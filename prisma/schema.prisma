generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String    @id
  email      String    @unique
  password   String
  sessions   Session[]
  isVerified Boolean   @default(false)
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Verification {
  id        Int      @id @default(autoincrement())
  code      String
  userId    String
  email     String
  expiresAt DateTime
}
